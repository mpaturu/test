document.addEventListener('keyup', function(event) { var code = event.keyCode || event.which; if (code === 9) { document.getElementById("container-calendar---Main--calendar--Head-prev").style.background = "Transparent"; document.getElementById("container-calendar---Main--calendar--Head-next").style.background = "Transparent"; if(event.target.id === "container-calendar---Main--calendar--Head-prev" || event.target.id === "container-calendar---Main--calendar--Head-next") { document.getElementById(event.target.id).style.background = "red"; } } });
